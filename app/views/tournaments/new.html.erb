<div class="tournament-container">
  <div class="nav-bar">
    <div class="left-nav">
      <div class="trophy-icon">
        <i class="bi bi-trophy"></i>
      </div>
      <div class="nav-heading">
        <h3><strong>SquashIt</strong></h3>
        <p>Tournament manager</p>
      </div>
    </div>

    <div class="middle-nav">
      <%= link_to "Features", "#", class: "nav-link" %>
      <%= link_to "How it works", "#", class: "nav-link" %>
      <%= link_to "Tournaments", "#", class: "nav-link" %>
      <%= link_to "Contact", "#", class: "nav-link" %>

    </div>

    <div class="right-nav">
      <% if user_signed_in? %>
        <%= link_to "Logout", destroy_user_session_path, method: :delete, class: "nav-link" %>
      <% else %>
        <%= link_to "Sign in", new_user_session_path, class: "nav-link" %>
      <% end %>
      <a href="#" id="create-nav-button"><strong>Create tournament</strong></a>
    </div>

  </div>
  <div class="centered-new-tournament">

    <div class="back-link-container">
      <i class="bi bi-arrow-left back-link">  </i><%= link_to "Back to Home", root_path, class: "back-link" %>
    </div>

    <div class="new-tournament-heading">
      <i class="bi bi-trophy new-tournament-icon"></i>
      <h2>Create New Tournament</h2>
      <p>Set up your squash tournament in minutes</p>
    </div>

    <div class="new-tournament-form-container">
      <h4>Tournament Details</h4>
      <p>Fill in the information below to create your tournament</p>
      <div class="new-tournament-form">
        <%= form_with(model: @tournament, local: true) do |form| %>
          <div class="form-group">
            <%= form.label :name, "Tournament Name" %>
            <%= form.text_field :name, class: "form-control", placeholder: "Enter tournament name" %>
          </div>
          <div class="form-group">
            <%= form.label :bracket_type, "Tournament Type" %>
              <%= form.select :bracket_type, ["Single elimination", "Double elimination", "Round Robin"], {prompt: "Select format"}, class: "form-control" %>
          </div>

          <div class="form-columns">

            <div class="form-group">
              <%= form.label :min_players, "Min Players" %>
              <%= form.select :min_players, [ 4, 6, 8], { prompt: "Select min players" }, class: "form-control" %>
            </div>

            <div class="form-group">
              <%= form.label :max_players, "Max Players" %>
              <%= form.select :max_players, [2, 4, 6, 8], { prompt: "Select max players" }, class: "form-control" %>
            </div>
          </div>

          <div class="form-group">
            <%= form.label :location, "Location" %>
            <%= form.text_field :location, class: "form-control", placeholder: "Enter tournament location" %>
          </div>

          <div class="form-columns">
            <div class="form-group">
              <%= form.label :start_date, "Start Date" %>
              <%= form.date_select :start_date, class: "form-control" %>
            </div>

            <div class="form-group">
              <%= form.label :end_date, "End Date" %>
              <%= form.date_select :end_date, class: "form-control" %>
            </div>
          </div>


          <div class="form-columns">
            <div class="form-group">
              <%= form.submit "Create Tournament", id: "create-tournament-button-form" %>
            </div>

            <div class="form-group">
              <%= link_to "Cancel", root_path, id: "cancel-button-form"%>
            </div>
          </div>
        <% end %>
      </div>

    </div>

    <div class="helpful-tip-new-form" >
      <div class="pro-tip-inline", id="helpful-tip-heading">
        <h5><i class="bi bi-gear"></i></h5>
        <h5>Pro Tip</h5>
      </div>

      <div class="pro-tip-inline">
        <i class="bi bi-people yellow" ></i>
        <p>Single elimination works best for 4-16 players</p>
      </div>

       <div class="pro-tip-inline">
        <i class="bi bi-trophy yellow"></i>
        <p>Round robin ensures everyone plays multiple matches</p>
      </div>

      <div class="pro-tip-inline">
        <i class="bi bi-calendar-event yellow"></i>
        <p>Allow 30-45 minutes per match for scheduling</p>
      </div>

    </div>


  </div>
  <div class="home-footer">
    <div class="footer-one">
      <div class="footer-logo">
        <strong><i class="bi bi-trophy trophy-footer-logo"></i></strong>
        <div class="logo-text">
          <p><strong>SquashIt</strong></p>
          <p>Tournament manager</p>
        </div>
      </div>
    </div>

    <div class="footer-two">
      <h6>Product</h6>
      <p>Features</p>
      <p>How it works</p>
      <p>Tournaments</p>
      <p>Pricing</p>
    </div>

    <div class="footer-three">
      <h6>Resources</h6>
      <p>Help center</p>
      <p>Community</p>
      <p>Blog</p>

    </div>

    <div class="footer-four">
      <h6>Connect</h6>
      <div class="footer-socials">
        <i class="bi bi-envelope"></i>
        <i class="bi bi-twitter-x"></i>
        <i class="bi bi-instagram"></i>
      </div>
      <p>support@squashit.com</p>
    </div>
  </div>
</div>
